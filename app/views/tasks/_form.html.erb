<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group col-xs-6 col-sm-3 col-md-3 col-lg-3">
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content,class: 'form-control' %>
  </div>

  <div class="form-group col-xs-6 col-sm-offset-2 col-sm-3 col-md-offset-2 col-md-3 col-lg-offset-3 col-lg-3">
    <%= f.label :status, 'ステータス' %>
    <%= f.select :status ,[["着手前", "着手前"], ["対応中", "対応中"], ["完了", "完了"]], {:include_blank => true}  , {class: 'form-control'} %>
  </div>
  <%= f.submit '投稿' %>
<% end %>